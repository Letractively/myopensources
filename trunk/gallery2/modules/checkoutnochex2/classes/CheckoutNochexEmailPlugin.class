/**
 * This is an implementation of the checkout module's CheckoutEmailInterface_1_0
 *
 * @package CheckoutNochex
 * @subpackage Classes
 */

class CheckoutNochexEmailPlugin extends CheckoutEmailInterface_1_0 {

    /**
     * @see CheckoutEmailInterface_1_0::getCustomPageTemplate()
     */
    function getEmailTemplateAndVariables($transactionId, $templateName) {
    
    
    	/* check here to see if a Nochex transaction */
	list ($ret, $transaction) = GalleryCoreApi::loadEntitiesById($transactionId);
	if ($ret) {
	    return array ($ret, null);
	}
	if ($transaction->getPaymentPlugin() != 'checkoutnochex') {
	    return array (null, null, null, null);
	}
	
    	switch($templateName) {
    	case 'paid' :
            return array(null,'modules/checkoutnochex/templates/email/paid.tpl','modules_checkoutnochex', null);
    	    break;
    	}
    	return array (null, null, null, null);
    }

}

